html(lang="es")
    include ../partials/head.pug
    body(class="bg-dark")
        main(class="col-12")
            h2(class="text-warning text-center")="Lista de Productos"
            div(class="d-flex flex-column align-items-center")
                div(class="col-8")
                a(href="/" class="btn btn-secondary")="ir a formulario"
                if productos.productos.length == 0
                    h3(class="text-light text-center")="no hay productos"
                else 
                    table(class="table table-dark")
                        tr(class="table-active")
                            th(scope="col")="Nombre"
                            th(scope="col")="Precio"
                            th(scope="col")="link img"
                        each prod in productos.productos 
                            tr
                                td(class="text-light")=prod.title
                                td(class="text-light")=prod.price
                                td
                                    img(src=prod.thumbnail alt=prod.title width="80px")


