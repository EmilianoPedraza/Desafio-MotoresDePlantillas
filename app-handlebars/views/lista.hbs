<h2 class="text-warning text-center">Lista de Productos</h2>
<div class="d-flex flex-column align-items-center">
  <div class="col-8">
  <a href="/" class="btn btn-secondary">ir a formulario</a>
      {{#if productos.productos.length}}
    <table class="table table-dark">
      <tr class="table-active">
        <th scope="col">Nombre</th>
        <th scope="col">Precio</th>
        <th scope="col">link img</th>
      </tr>
      {{#each productos.productos}}
        <tr>
          <td class="text-light">{{title}}</td>
          <td class="text-light">{{price}}</td>
          <td> <img src="{{thumbnail}}" alt="{{title}}" width="80px" /></td>
        </tr>
      {{/each}}
    </table>
  {{else}}
    <h3 class="text-light text-center">no hay productos</h3>
  {{/if}}
  </div>

</div>