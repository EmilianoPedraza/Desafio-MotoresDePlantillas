<!DOCTYPE html>
<html lang="es">
  <%-include("../partials/head.ejs") %> 
  <body class="bg-dark">
    <main class="col-12">
      <h2 class="text-warning text-center">Lista de Productos</h2>
      <div class="d-flex flex-column align-items-center">
        <div class="col-8">
          <a href="/" class="btn btn-secondary">ir a formulario</a>
          <% if (productos.productos.length == 0){%>
            <h3 class="text-light text-center">no hay productos</h3>
          <%}else{%>
            <table class="table table-dark">
              <tr class="table-active">
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">link img</th>
              </tr>
              <%productos.productos.forEach((prod)=>{%>
                <tr>
                  <td class="text-light">prod.title</td>
                  <td class="text-light">prod.price</td>
                  <td> <img src=<%=prod.thumbnail%> alt=<%=prod.title%> width="80px" /></td>
                </tr>      
              <%})%>
            </table>
          <%}%>
        </div>
      </div>
    </main>
  </body>
</html>